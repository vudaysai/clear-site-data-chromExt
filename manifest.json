{
  "name": "Clear Site Data",
  "description": "This will clear active chrome tab localStorage, sessionStorage and cookies",
  "version": "1.1.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "scripting",
    "tabs",
    "cookies"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon.png"
    },
    "default_title": "Delete site data"
  }
}